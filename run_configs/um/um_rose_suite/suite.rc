[scheduling]
    [[dependencies]]
        graph = """
            build_um
        """

[runtime]

    [[common]]
        [[[job]]]
            batch system = slurm
            execution time limit = PT10M
        [[[directives]]]
            --mem=2000
#            --ntasks=16
            --cpus-per-task=16
            --export=NONE
        [[[environment]]]
            FAB_WORKSPACE=$SCRATCH/fab_workspace
            GCOM_BUILD=$SCRATCH/fab_workspace/gcom-object-archive/build_output

    [[build_um]]
        inherit = common
        script = run_py.sh build_um
